{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "google",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType" : "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-console": "off",
    "linebreak-style": [
      "error",
      "windows"
    ],
    "max-len": [
      "warn",
      {
        "code": 80
      }
    ]
  }
}
